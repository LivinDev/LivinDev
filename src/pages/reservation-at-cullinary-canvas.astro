---
import Layout from "@/layouts/Layout.astro";
import ReservationForm from "@/sections/ReservationForm";
import { Image } from "astro:assets";
import restaurantImage from "../../public/hero-img.jpg";
---

<Layout title="Culinary Canvas Reservation">
  <main class="reservation-page">
    <section class="hero">
      <Image
        src={restaurantImage}
        alt="Culinary Canvas Interior"
        class="hero-image"
      />
      <div class="hero-content">
        <h1>Reserve Your Culinary Experience</h1>
        <p>Indulge in an unforgettable dining journey at Culinary Canvas</p>
      </div>
    </section>

    <section class="reservation-section">
      <div class="container">
        <div class="reservation-intro">
          <h2>Book Your Table</h2>
          <p>
            Step into a world where culinary artistry meets unparalleled
            ambiance. At Culinary Canvas, every reservation is a promise of an
            exquisite gastronomic adventure.
          </p>
        </div>
        <ReservationForm client:load />
      </div>
    </section>

    <section class="additional-info">
      <div class="container">
        <div class="info-card">
          <h3>Special Requests</h3>
          <p>
            Our team is dedicated to making your dining experience perfect. If
            you have any special requests or dietary requirements, please don't
            hesitate to mention them in your reservation.
          </p>
        </div>
        <div class="info-card">
          <h3>Cancellation Policy</h3>
          <p>
            We understand plans can change. You can cancel or modify your
            reservation up to 24 hours before your scheduled time without any
            charge.
          </p>
        </div>
        <div class="info-card">
          <h3>Private Events</h3>
          <p>
            Looking to host a private event? Culinary Canvas offers bespoke
            dining experiences for special occasions. Contact our events team
            for more information.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Raleway:wght@300;400;600&display=swap");

  :root {
    --primary-color: #c9a96e;
    --text-color: #2c2c2c;
    --background-color: #f8f5f0;
    --card-background: #ffffff;
  }

  body {
    font-family: "Raleway", sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
  }

  .reservation-page {
    .hero {
      position: relative;
      height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;

      .hero-image {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
        padding: 2rem;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 8px;

        h1 {
          font-family: "Playfair Display", serif;
          font-size: 3rem;
          margin-bottom: 1rem;
        }

        p {
          font-size: 1.2rem;
          max-width: 600px;
          margin: 0 auto;
        }
      }
    }

    .reservation-section {
      padding: 4rem 0;

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .reservation-intro {
        text-align: center;
        margin-bottom: 3rem;

        h2 {
          font-family: "Playfair Display", serif;
          font-size: 2.5rem;
          color: var(--primary-color);
          margin-bottom: 1rem;
        }

        p {
          max-width: 800px;
          margin: 0 auto;
          font-size: 1.1rem;
          line-height: 1.6;
        }
      }
    }

    .additional-info {
      background-color: var(--card-background);
      padding: 4rem 0;

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 2rem;
      }

      .info-card {
        flex-basis: calc(33.333% - 2rem);
        background-color: var(--background-color);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;

        &:hover {
          transform: translateY(-5px);
        }

        h3 {
          font-family: "Playfair Display", serif;
          font-size: 1.5rem;
          color: var(--primary-color);
          margin-bottom: 1rem;
        }

        p {
          font-size: 1rem;
          line-height: 1.5;
        }
      }
    }
  }

  @media (max-width: 768px) {
    .reservation-page {
      .hero {
        height: fit-content;

        .hero-content {
          h1 {
            font-size: 2.5rem;
          }

          p {
            font-size: 1rem;
          }
        }
      }

      .additional-info {
        .info-card {
          flex-basis: 100%;
        }
      }
    }
  }
</style>
